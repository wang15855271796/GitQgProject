<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootview"
    android:hardwareAccelerated="true"

    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/layout_home_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="#FFFACA"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="73dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:textColor="#333333"
                android:id="@+id/tv"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/size_45dp"
                android:text="当前地址不在配送范围内，建议您 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/tv"
                android:textColor="#ffffff"

                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="修改地址"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingTop="@dimen/size_3dp"
                android:background="@drawable/shape_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="或"
                android:id="@+id/tv1"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginLeft="@dimen/size_45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_change"
                android:layout_toRightOf="@+id/tv1"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/size_8dp"
                android:text="修改城市"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingTop="@dimen/size_3dp"
                android:background="@drawable/shape_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_toRightOf="@+id/tv_change"
                android:text="以便您能够正常下单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </LinearLayout>

    <include layout="@layout/view_tab_bar" />
</LinearLayout>
