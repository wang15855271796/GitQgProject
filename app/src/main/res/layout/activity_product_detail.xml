<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <com.puyue.www.qiaoge.view.IdeaScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--详情模块-->
            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.puyue.www.qiaoge.view.IdeaViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:background="@drawable/aa"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_color_white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/iv_flag"
                            android:textColor="#13B156"
                            android:text="翘歌"
                            android:textSize="10sp"
                            android:layout_centerVertical="true"
                            android:padding="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            tools:text="10.0"
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_activity_common_price"
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@+id/iv_flag"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF5C01"
                            android:textSize="@dimen/size_19dp" />

                        <RelativeLayout
                            android:layout_alignParentRight="true"
                            android:id="@+id/linearLayout_collection"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="45dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_include_common_collection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_love" />

                            <TextView
                                android:layout_below="@+id/iv_include_common_collection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="收藏"
                                android:textColor="#F6551A"
                                android:textSize="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_alignParentRight="true"
                            android:id="@+id/linearLayout_share"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ImageViewShare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_share" />

                            <TextView
                                android:layout_below="@+id/ImageViewShare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="分享"
                                android:textColor="#F6551A"
                                android:textSize="10dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        tools:text="鸡肉"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/tv_activity_common_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/app_color_white"
                        android:textColor="#333333"
                        android:textSize="@dimen/size_14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:orientation="vertical">

                        <!--销量-->

                        <TextView
                            tools:text="销量:"
                            android:id="@+id/tv_sale"
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="产品规格"
                            android:id="@+id/tv"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.puyue.www.qiaoge.view.FlowLayout
                            android:id="@+id/fl_container"
                            android:layout_below="@+id/tv"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </com.puyue.www.qiaoge.view.FlowLayout>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="产品说明："
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="@dimen/size_17dp"
                        android:textColor="@color/app_dark_gray"
                        android:textSize="12dp" />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="合计"
                            android:textColor="@color/app_cancle_gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_activity_common_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/app_front_black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_activity_common_total_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:text="￥0.0"
                            android:textColor="@color/app_tab_selected"
                            android:textSize="15dp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/size_8dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/sp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="供应商名"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:id="@+id/tv1"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:textSize="@dimen/sp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            tools:text="复仇者联盟"
                            android:textColor="#333333"
                            android:layout_marginLeft="@dimen/size_11dp"
                            android:layout_toRightOf="@+id/tv1"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/sp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="配送时间"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:id="@+id/tv2"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:textSize="@dimen/sp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            tools:text="复仇者联盟"
                            android:textColor="#333333"
                            android:layout_marginLeft="@dimen/size_11dp"
                            android:layout_toRightOf="@+id/tv2"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/sp_16"
                        android:layout_marginBottom="@dimen/sp_16"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/sp_16"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="产品说明"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:id="@+id/tv3"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:textSize="@dimen/sp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            tools:text="复仇者联盟"
                            android:textColor="#333333"
                            android:layout_marginLeft="@dimen/size_11dp"
                            android:layout_toRightOf="@+id/tv3"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

                <include layout="@layout/app_detail_evaluation" />

                <include layout="@layout/activity_goods_recommed" />

             </LinearLayout>

            <!--证书模块-->
            <LinearLayout
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="营业执照"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/size_24dp"
                    android:textSize="@dimen/size_18dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="所在地区"
                        android:textColor="#666666"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        tools:text="复仇者"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="有效期"
                        android:textColor="#666666"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        tools:text="复仇者"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="营业执照"
                        android:textColor="#666666"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        tools:text="复仇者"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <ImageView
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:src="@mipmap/ic_splash_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:text="注：以上营业执照信息，根据国家工商总局《网络交易管理办法》要求对入驻商家营业执照信息进行公示，除公司名称已通过认证之外，其余信息由卖家自行申报填写。如需进一步核实，请联系当地工商行政管理部门。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="食品流通（经营）许可证"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/size_24dp"
                    android:textSize="@dimen/size_18dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="有效期"
                        android:textColor="#666666"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        tools:text="复仇者"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="照片"
                        android:textColor="#666666"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        tools:text="复仇者"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <ImageView
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:src="@mipmap/ic_splash_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:text="注：以上营业执照信息，根据国家工商总局《网络交易管理办法》要求对入驻商家营业执照信息进行公示，除公司名称已通过认证之外，其余信息由卖家自行申报填写。如需进一步核实，请联系当地工商行政管理部门。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </com.puyue.www.qiaoge.view.IdeaScrollView>

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:paddingTop="24dp"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/back"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:background="#00FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="48dp">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textColor="#00000000"
                        android:gravity="center"
                        android:text="商品详情"/>

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textColor="#00000000"
                        android:gravity="center"
                        android:text="资质证书"/>



                </RadioGroup>

            </FrameLayout>

        </LinearLayout>



    </LinearLayout>

</FrameLayout>