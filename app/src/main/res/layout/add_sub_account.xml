<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.puyue.www.qiaoge.view.CompatToolbar
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/app_border_bottom_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:text="子账号管理"
            android:textColor="@color/app_top_bar_text"
            android:textSize="18dp" />
    </com.puyue.www.qiaoge.view.CompatToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:orientation="vertical"
                android:background="@color/ffffff"
                android:layout_width="match_parent"
                android:layout_height="225dp">


                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:text="联系人"
                        android:id="@+id/tv"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_15dp"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/tv"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:singleLine="true"
                        android:textColor="#232131"
                        android:textColorHint="#D5D5D5"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">


                    <TextView
                        android:text="登录账号"
                        android:id="@+id/tv1"
                        android:textSize="@dimen/size_15dp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/tv1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入手机号码"
                        android:singleLine="true"
                        android:textColor="#232131"
                        android:textColorHint="#D5D5D5"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:id="@+id/ll_yzm"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_yzm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_green"
                            android:gravity="center"
                            android:padding="@dimen/size_7dp"
                            android:text="获取验证码"
                            android:textColor="#333333"
                            android:textSize="12dp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">


                    <TextView
                        android:text="验证码"
                        android:id="@+id/tv2"
                        android:textSize="@dimen/size_15dp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_yzm"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/tv2"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:singleLine="true"
                        android:textColor="#232131"
                        android:textColorHint="#D5D5D5"
                        android:textSize="15dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">


                    <TextView
                        android:text="请设置登录密码"
                        android:id="@+id/tv3"
                        android:textSize="@dimen/size_15dp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_set_psd"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/tv3"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入登录密码"
                        android:singleLine="true"
                        android:textColor="#232131"
                        android:textColorHint="#D5D5D5"
                        android:textSize="15dp" />



                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">


                    <TextView
                        android:text="确认登录密码"
                        android:id="@+id/tv4"
                        android:textSize="@dimen/size_15dp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_sure_psd"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/tv4"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请确认登录密码"
                        android:singleLine="true"
                        android:textColor="#232131"
                        android:textColorHint="#D5D5D5"
                        android:textSize="15dp" />

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_height="@dimen/size_45dp">

                <TextView
                    android:text="是否共享积分"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/swipe"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_1dp"
                android:layout_height="@dimen/size_45dp">

                <TextView
                    android:text="是否共享余额"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/swipe1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_1dp"
                android:layout_height="@dimen/size_45dp">

                <TextView
                    android:text="是否共享优惠券"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/swipe2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:text="确认添加"
            android:id="@+id/tv_add"
            android:layout_marginBottom="@dimen/size_20dp"
            android:background="@drawable/app_feedback_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:textSize="@dimen/size_15dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_height="@dimen/size_50dp" />
    </RelativeLayout>


</LinearLayout>