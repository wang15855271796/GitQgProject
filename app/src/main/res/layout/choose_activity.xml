<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp">

            <ImageView
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择收货地址"
                android:textColor="#272f3f"
                android:textSize="18dp" />

            <TextView
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="管理地址"
                android:layout_marginLeft="120dp"
                android:textColor="#666666"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:elevation="@dimen/size_15dp"
            android:background="@color/colorPrimary"
            android:layout_height="@dimen/size_50dp">

            <TextView
                android:text="杭州市"
                android:textColor="#333333"
                android:drawableLeft="@mipmap/icon_address"
                android:drawablePadding="@dimen/size_5dp"
                android:drawableRight="@mipmap/arrow_bottom"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0.5dp"
                android:background="#666666"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/size_20dp"/>

            <TextView
                android:text="请输入收货地址"
                android:textColor="#CCCCCC"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_tip"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:background="#FFF6D2"
            android:layout_height="@dimen/size_50dp">

            <TextView
                android:id="@+id/tv_tip"
                android:textColor="#FF680A"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:text="因各地区商品和配送服务不同，请选择准确的收货地址"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_10dp"
                android:drawablePadding="@dimen/size_15dp"
                android:drawableRight="@mipmap/ic_mine_cancel"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_70dp">


            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="默认地址"
                    android:id="@+id/tv"
                    android:textColor="#FF680A"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_area_default"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/tv"
                    android:text="杭州翘歌网络科技有限公司"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:textColor="#333333"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="收货地址"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="+  新建地址"
                android:textColor="#FF680A"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>