<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gray_line"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="即将拨打客服电话"
        android:textColor="@color/app_front_black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_dialog_call_phone_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/app_front_black"
        android:textSize="14dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_size"
        android:background="@color/app_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_call_phone_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="取消"
            android:textColor="@color/app_color_black"
            android:textSize="14dp" />

        <View
            android:layout_width="@dimen/app_line_size"
            android:layout_height="match_parent"
            android:background="@color/app_line_gray" />

        <TextView
            android:id="@+id/tv_dialog_call_phone_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="确认"
            android:textColor="@color/wallet_bg"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>