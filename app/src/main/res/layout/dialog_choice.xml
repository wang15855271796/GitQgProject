<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热狗香肠真棒热狗香肠"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="47dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="666666"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_toRightOf="@+id/iv_head"
                    android:textColor="#666"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥100.00—￥100.00"
                    android:layout_below="@+id/tv_sale"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_toRightOf="@+id/iv_head"
                    android:textColor="#FF703C"
                    android:textSize="16sp" />




                <ImageView
                    android:id="@+id/iv_close"
                    android:padding="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iv_close" />

            </RelativeLayout>

            <View
                android:id="@+id/v"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"/>

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="规格"
                    android:id="@+id/tv"

                    android:layout_marginLeft="15dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_toRightOf="@+id/tv"
                    android:text="最多享受666包"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.puyue.www.qiaoge.view.FlowLayout
                    android:layout_below="@+id/tv_desc"
                    android:id="@+id/fl_container"

                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"/>

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_20dp">

                <TextView
                    android:text="售价信息"
                    android:id="@+id/tv1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_toRightOf="@+id/tv1"
                    android:text="库存：300"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_below="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:overScrollMode="never" />

            </RelativeLayout>



            <TextView
                android:id="@+id/tv_confirm"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginRight="@dimen/size_12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_orange_radius"
                android:gravity="center"
                android:text="确定"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/size_6dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>